<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.ScoreListPage"
             BackgroundColor="#e8f5e9">

    <ScrollView>
        <VerticalStackLayout Padding="20,30" Spacing="20">

            <!-- Page Title -->
            <Label Text="Review Scores"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#1b5e20" />

            <!-- Picker for Score Selection -->
            <Frame BackgroundColor="#a5d6a7"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="True">
                <Picker x:Name="ScoreHistoryList"
                        ItemsSource="{Binding ScoresList, Mode=OneWay}"
                        SelectedIndexChanged="SelectedScore"
                        Title="Select a Score"
                        TitleColor="#2e7d32"
                        BackgroundColor="Transparent"
                        TextColor="#1b5e20"
                        HorizontalOptions="Fill" />
            </Frame>

            <!-- CollectionView for Scores -->
            <CollectionView x:Name="ClctView"
                            ItemsSource="{Binding ReviewScoreData, Mode=OneWay}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White"
                               CornerRadius="15"
                               Padding="15"
                               Margin="0,10,0,10"
                               HasShadow="True"
                               BorderColor="#81c784">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{Binding Target}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#2e7d32" />
                                <Label Text="Judged Distance:"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#424242" />
                                <Label Text="{Binding JudgedDistance}"
                                       FontSize="14"
                                       TextColor="#424242" />

                                <Label Text="Actual Distance:"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#424242" />
                                <Label Text="{Binding ActualDistance}"
                                       FontSize="14"
                                       TextColor="#424242" />

                                <Label Text="Score:"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#424242" />
                                <Label Text="{Binding ScoringRing}"
                                       FontSize="14"
                                       TextColor="#424242" />

                                <Label Text="Notes:"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#424242" />
                                <Label Text="{Binding Notes}"
                                       FontSize="14"
                                       TextColor="#757575" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
