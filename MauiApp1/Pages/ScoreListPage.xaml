<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiApp1"
             x:Class="MauiApp1.Pages.ScoreListPage"
             Title="Scores History">
<ContentPage.BindingContext>
    <local:ScoreListViewModel/>
</ContentPage.BindingContext>
    <VerticalStackLayout
        Padding="30,0">
        <Label 
            Text="Welcome to .NET!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Picker
            x:Name="ScoreHistoryList" 
            ItemsSource="{Binding ScoresList}"
            BackgroundColor="AliceBlue"/>
        <Button
            Text="Review Score"
            Clicked="PopulateScoreHistoryData">
        </Button>
        <ListView ItemsSource="{Binding ReviewScoreData}"
                        x:Name="ScoreDatalv"/>
        <Button
            Text="Remove Score"
            Clicked="RemoveScoreFromList">
        </Button>
    </VerticalStackLayout>
</ContentPage>