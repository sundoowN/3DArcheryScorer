<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.DetailedScoreKeeperPage"
             Title="Review Equipment">
    <VerticalStackLayout Padding="30" Spacing="20" HorizontalOptions="Center">
        <Label Text="Known Shooter Scorecard" 
               FontSize="28" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" />
        <Button Text="Unknown Shooter Scorecard" 
                Clicked="OpenUnknownScorecard" 
                BackgroundColor="#4CAF50" 
                TextColor="White" 
                CornerRadius="10" />
        <Button Text="Known Shooter Scorecard" 
                Clicked="OpenKnownScoreCard" 
                BackgroundColor="#4CAF50" 
                TextColor="White" 
                CornerRadius="10" />
    </VerticalStackLayout>
</ContentPage>
