<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.RegularScoreCardPage"
             BackgroundColor="#f5f5f5"
             Padding="10">
<CollectionView ItemsSource="{Binding ScoresList}">
    <CollectionView.ItemTemplate>
        <DataTemplate>
            <Grid ColumnSpacing="5" RowSpacing="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <!-- Target Number -->
                <Label Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" 
                       Text="{Binding TargetNumber}"/>

                <!-- Score Picker -->
                <Picker Grid.Row="0" Grid.Column="1" WidthRequest="50" 
                        ItemsSource="{Binding Source={x:Reference RegularScoreCardPage}, Path=BindingContext.AvailableScores}"
                        SelectedItem="{Binding Score, Mode=TwoWay}"
                        SelectedIndexChanged="Picker_SelectedIndexChanged"/>

                <!-- Consecutive Score -->
                <Label Grid.Row="0" Grid.Column="2" HorizontalOptions="Center" 
                       Text="{Binding ConsecutiveScore}"/>
            </Grid>
        </DataTemplate>
    </CollectionView.ItemTemplate>
</CollectionView>

</ContentPage>