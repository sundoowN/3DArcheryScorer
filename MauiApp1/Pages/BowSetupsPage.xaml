<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.BowSetupsPage"
             Title="BowSetupsPage">
        <ScrollView>
        <StackLayout Padding="20">

            <Label Text="Enter Your Bow Setup" FontSize="Medium" />

            <Label Text="Bow:" />
            <Entry x:Name="BowEntry" Placeholder="Enter Bow" />

            <Label Text="Sights:" />
            <Entry x:Name="SightsEntry" Placeholder="Enter Sights" />

            <Label Text="Stabilizers:" />
            <Entry x:Name="StabilizersEntry" Placeholder="Enter Stabilizers" />

            <Label Text="Release:" />
            <Entry x:Name="ReleaseEntry" Placeholder="Enter Release" />

            <Button Text="Save Setup"
                    Margin="0,20,0,0"/>

        </StackLayout>
    </ScrollView>
</ContentPage>

